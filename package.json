{
  "name": "@python-portal/frontend",
  "version": "1.0.0",
  "type": "module",
  "description": "React frontend application for Python Learning Portal with modern UI and interactive code editor",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext ts,tsx --fix",
    "type-check": "tsc --noEmit",
    "test": "npm run lint && npm run type-check && npm run build",
    "serve": "npm run preview",
    "docker:build": "docker build -t python-portal-frontend .",
    "docker:run": "docker run -p 80:80 python-portal-frontend"
  },
  "keywords": [
    "python",
    "learning",
    "frontend",
    "react",
    "typescript",
    "vite",
    "education",
    "code-editor"
  ],
  "author": "Darren Storey <darren.storey87@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/dstorey87/python-portal-frontend.git"
  },
  "bugs": {
    "url": "https://github.com/dstorey87/python-portal-frontend/issues"
  },
  "homepage": "https://github.com/dstorey87/python-portal-frontend#readme",
  "dependencies": {
    "@python-portal/types": "^1.0.0",
    "@python-portal/exercises": "^1.0.0",
    "@monaco-editor/react": "^4.6.0",
    "axios": "^1.6.2",
    "clsx": "^2.0.0",
    "dompurify": "^3.0.7",
    "framer-motion": "^10.16.16",
    "lucide-react": "^0.294.0",
    "marked": "^11.0.0",
    "monaco-editor": "^0.44.0",
    "react": "^18.2.0",
    "react-confetti": "^6.1.0",
    "react-dom": "^18.2.0",
    "react-hot-toast": "^2.4.1",
    "react-query": "^3.39.3",
    "react-router-dom": "^6.20.1",
    "react-syntax-highlighter": "^15.5.0",
    "tailwind-merge": "^2.0.0",
    "zustand": "^4.4.7"
  },
  "devDependencies": {
    "@types/dompurify": "^3.0.5",
    "@types/react": "^18.2.37",
    "@types/react-dom": "^18.2.15",
    "@types/react-syntax-highlighter": "^15.5.10",
    "@typescript-eslint/eslint-plugin": "^7.16.0",
    "@typescript-eslint/parser": "^7.16.0",
    "@vitejs/plugin-react": "^4.1.1",
    "autoprefixer": "^10.4.16",
    "eslint": "^8.57.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.4",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "prettier": "^3.3.2",
    "postcss": "^8.4.31",
    "tailwindcss": "^3.3.5",
    "typescript": "^5.5.3",
    "vite": "^4.5.0",
    "vite-plugin-pwa": "^0.17.0"
  },
  "files": [
    "dist/**/*",
    "src/**/*",
    "public/**/*",
    "index.html",
    "vite.config.ts",
    "tailwind.config.js",
    "postcss.config.cjs",
    "Dockerfile",
    "nginx.conf",
    "README.md",
    "LICENSE"
  ],
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}